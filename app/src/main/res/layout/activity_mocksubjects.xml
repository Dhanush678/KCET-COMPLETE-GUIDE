<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".mocksubjects">

    <RelativeLayout
        android:id="@+id/relativeLayout33"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <ImageView
            android:id="@+id/back_mock"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="-295dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:text="Mock test"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/box">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/maths"
                    android:padding="5dp">

                </ImageView>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="20dp"
                    android:text="Mathematics"
                    android:gravity="center"

                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_v1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#00ff0000"
                    android:onClick="openactivityC"

                    android:padding="20dp"

                    android:textAllCaps="true"
                    android:textColor="@color/blackTextColor" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/box">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/chemistry"
                    android:padding="5dp">

                </ImageView>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="30dp"
                    android:text="Chemistry"
                    android:gravity="center"

                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_v2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="openactivityB"

                    android:layout_alignParentBottom="true"
                    android:background="#00ff0000"
                    android:padding="20dp"

                    android:textAllCaps="true"
                    android:textColor="@color/blackTextColor" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_height="150dp"

                android:background="@drawable/box">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/boilogypng"
                    android:padding="5dp">

                </ImageView>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="50dp"
                    android:text="Biology"
                    android:gravity="center"

                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_v3"
                    android:onClick="openactivityD"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#00ff0000"
                    android:padding="20dp"

                    android:textAllCaps="true"
                    android:textColor="@color/blackTextColor" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/physics"
                    android:padding="5dp">

                </ImageView>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:padding="10dp"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="50dp"
                    android:text="Physics"
                    android:gravity="center"

                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/previous"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#00ff0000"
                    android:padding="20dp"
                    android:onClick="openactivityA"

                    android:textAllCaps="true"
                    android:textColor="@color/blackTextColor" />


            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>